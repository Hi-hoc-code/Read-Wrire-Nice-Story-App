<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/imgPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/prevblack"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm truyện"
            android:textSize="36sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/tvSkip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ĐĂNG"
            android:textSize="24sp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/custom_button"
            android:textColor="@color/white"
            android:textStyle="bold"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#DDD0D0"
        />


    <ImageView
        android:id="@+id/imgAddCover"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:src="@drawable/baseline_add_photo_alternate_24" />
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#DDD0D0"
        android:layout_marginTop="15dp"
        />

    <EditText
        android:id="@+id/edtTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_edittext"
        android:hint="Tiêu đề truyện"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        />

    <EditText
        android:id="@+id/edtDescription"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_edittext"
        android:hint="Mô tả"
        android:layout_marginTop="10dp"
        android:textSize="30sp"
        />
    <TextView
        android:id="@+id/categoryTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawableStart="@drawable/baseline_category_24"
        android:drawableEnd="@drawable/baseline_arrow_drop_down_24"
        android:hint="Thể loại"
        android:textSize="30sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#DDD0D0"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:id="@+id/attackBtn"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:src="@drawable/baseline_add_to_drive_24"
        android:layout_marginTop="10dp"
        />

</LinearLayout>